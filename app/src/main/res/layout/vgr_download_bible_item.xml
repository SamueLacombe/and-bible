<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/vgr_download_bible_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="horizontal"
    android:padding="8sp">

    <RelativeLayout
        android:id="@+id/selection_indicator"
        android:layout_width="12sp"
        android:layout_height="12sp"
        android:background="@drawable/selection_indicator_state_list" />

    <TextView
        android:id="@+id/bible_title"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:paddingLeft="10sp"
        android:paddingRight="10sp"
        android:textSize="24sp"
        tools:text="ENG - English" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:orientation="vertical">

            <TextView
                android:id="@+id/bible_download_size_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/download_item_label" />

            <TextView
                android:id="@+id/bible_capacity_required_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/required_item_label" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/bible_download_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="144 MB" />

            <TextView
                android:id="@+id/bible_capacity_required"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="193 MB" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
